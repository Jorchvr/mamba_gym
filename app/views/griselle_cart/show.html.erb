<%= stylesheet_link_tag "main_panel", media: "all", "data-turbo-track": "reload" %>

<div class="panel card" style="max-width:640px; margin:24px auto; padding:20px;">
  <div style="display:flex;justify-content:space-between;align-items:center; margin-bottom:8px;">
    <h2 class="title" style="margin:0;">Clases (Griselle)</h2>
    <%= link_to "Volver", authenticated_root_path, class: "btn" %>
  </div>

  <% if flash[:cart_notice] %>
    <div class="card" style="border-color: rgba(16,185,129,.35); background: rgba(16,185,129,.10); padding:.6rem 1rem; margin-bottom:.75rem;">
      <%= flash[:cart_notice] %>
    </div>
  <% end %>
  <% if flash[:cart_alert] %>
    <div class="card" style="border-color: rgba(239,68,68,.35); background: rgba(239,68,68,.10); padding:.6rem 1rem; margin-bottom:.75rem;">
      <%= flash[:cart_alert] %>
    </div>
  <% end %>

  <!-- ===== Precio personalizado (único formulario) ===== -->
  <div class="card" style="margin-top:8px; padding:16px;">
    <h3 class="card-title mb-2" style="margin:0 0 10px;">Precio personalizado</h3>

    <%= form_with url: add_griselle_cart_path, method: :post, local: true do |f| %>
      <input type="hidden" name="id" value="custom" />
      <div style="display:flex; gap:10px; flex-wrap:wrap; align-items:flex-end;">
        <div style="flex:1; min-width:220px;">
          <label class="label" style="display:block; margin-bottom:6px;">Descripción</label>
          <input type="text" name="description" placeholder="Ej. Clase privada" class="form-input" required>
        </div>
        <div style="width:160px;">
          <label class="label" style="display:block; margin-bottom:6px;">Monto (MXN)</label>
          <input type="number" step="0.01" min="0" name="amount" placeholder="15.00" class="form-input" required>
        </div>
        <div>
          <%= f.submit "Agregar", class: "btn btn-primary" %>
        </div>
      </div>
      <p class="text-muted" style="margin-top:8px;">El monto se convierte automáticamente a centavos (price_cents) al guardar.</p>
    <% end %>
  </div>

  <!-- ===== Carrito ===== -->
  <div class="card" style="margin-top:16px; padding:16px;">
    <h3 class="card-title" style="margin:0 0 10px;">Carrito</h3>

    <% if @cart.blank? %>
      <p class="text-muted">No hay items.</p>
    <% else %>
      <% total_cents = 0 %>

      <% @cart.each do |l| %>
        <% # Tolerancia: si @cart es Hash, cada elemento es [key, value]
           item = l.is_a?(Array) ? l.last : l
           next unless item.is_a?(Hash)
           item = item.respond_to?(:deep_symbolize_keys) ? item.deep_symbolize_keys : item

           unit_cents = item[:price_cents].to_i
           qty        = item[:qty].to_i
           line_cents = unit_cents * qty
           total_cents += line_cents %>

        <div style="display:flex; justify-content:space-between; align-items:center; padding:.5rem 0; border-bottom:1px dashed rgba(255,255,255,.08);">
          <div>
            <strong><%= (item[:name] || "Item") %></strong>
            <em style="opacity:.8;">&nbsp;x<%= qty %></em>
            <div class="text-muted" style="font-size:.9rem;">$<%= (unit_cents/100.0).round(2) %> c/u</div>
          </div>
          <div style="display:flex; gap:6px; align-items:center;">
            <span style="min-width:80px; text-align:right;">$<%= (line_cents/100.0).round(2) %></span>
            <%= button_to "−", decrement_griselle_cart_path, method: :post, params: { line_id: item[:id] }, class: "btn btn-sm", form: { data: { turbo: false } } %>
            <%= button_to "+",  increment_griselle_cart_path, method: :post, params: { line_id: item[:id] }, class: "btn btn-primary btn-sm", form: { data: { turbo: false } } %>
            <%= button_to "Quitar", remove_griselle_cart_path, method: :post, params: { line_id: item[:id] }, class: "btn btn-sm", form: { data: { turbo: false } } %>
          </div>
        </div>
      <% end %>

      <%= form_with url: checkout_griselle_cart_path, method: :post, local: true, html: { style: "margin-top:14px;" } do |f| %>
        <div style="display:flex; justify-content:space-between; align-items:center; gap:12px; flex-wrap:wrap;">
          <div>
            <label class="label" style="display:block; margin-bottom:6px;">Método de pago</label>
            <label><input type="radio" name="payment_method" value="cash" checked> Efectivo</label>
            <label style="margin-left:1rem;"><input type="radio" name="payment_method" value="transfer"> Transferencia</label>
          </div>
          <div style="margin-left:auto; font-weight:600;">
            Total: $<%= (total_cents/100.0).round(2) %>
          </div>
          <%= f.submit "Cobrar", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

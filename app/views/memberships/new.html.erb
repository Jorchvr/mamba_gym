<%= stylesheet_link_tag "main_panel",  media: "all", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "membership",  media: "all", "data-turbo-track": "reload" %>

<div class="membership-page">
  <div class="header-row" style="margin-bottom: .75rem; display:flex; justify-content:space-between; align-items:center; gap:.75rem;">
    <h2 class="title">Cobrar mensualidad</h2>
    <div>
      <%= link_to "Inicio", authenticated_root_path, class: "btn" %>
    </div>
  </div>

  <div class="card">
    <%= form_with url: memberships_path, method: :get, local: true do |f| %>
      <div class="search-inline">
        <%= f.text_field :q,
                         value: params[:q],
                         placeholder: "Buscar # Cliente o nombre",
                         class: "form-input form-input--xl",
                         autofocus: true %>
        <%= f.submit "Buscar", class: "btn btn-accent btn-xl search-inline-btn" %>
      </div>
    <% end %>
  </div>

  <% if @query.present? %>
    <% if @client.present? %>
      <% overdue = @client.next_payment_on.present? && @client.next_payment_on < Date.current %>
      <% active  = @client.next_payment_on.present? && @client.next_payment_on >= Date.current %>

      <div class="card result-card" style="margin-top:1rem;">
        <div class="result-row">
          <div class="result-photo">
            <%= client_photo_tag(@client, size: 120, classes: "client-photo--xl") %>
          </div>
          <div>
            <h3 class="result-name"><%= @client.name %></h3>
            <p class="result-meta">#<%= @client.id %> • <%= @client.membership_type&.humanize || "-" %></p>
            <div class="kv"><span>Inscripción</span><span><%= @client.enrolled_on || "-" %></span></div>
            <div class="kv"><span>Próximo pago</span><span><%= @client.next_payment_on || "-" %></span></div>
          </div>
        </div>

        <div class="status-wrap">
          <% if overdue %>
            <div class="status-panel status-panel--debt">
              <div class="status-kicker">Estado</div>
              <div class="status-big">ADEUDO</div>
              <p class="status-sub">La fecha de pago ya pasó. Selecciona un plan para renovar.</p>
            </div>
          <% elsif active %>
            <div class="status-panel status-panel--ok">
              <div class="status-kicker">Estado</div>
              <div class="status-big">ACTIVO</div>
              <p class="status-sub">Puedes extender su membresía.</p>
            </div>
          <% else %>
            <div class="status-panel">
              <div class="status-kicker">Estado</div>
              <div class="status-big">SIN FECHAS</div>
              <p class="status-sub">No hay inscripción registrada. Puedes activar con un plan.</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card" style="margin-top:1rem;">
        <h3 class="card-title">Selecciona plan, precio y método de pago</h3>

        <%= form_with url: memberships_checkout_path, method: :post, local: true, html: { id: "membership-form" } do |f| %>
          <%= hidden_field_tag :client_id, @client.id %>

          <div class="mb-3 plan-picker">
            <label class="label label-strong">Plan de Renovación</label>

            <div class="grid-3" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(130px, 1fr)); gap: 10px;">
              
              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_visit" name="plan" value="visit">
                <label class="segmented-btn" for="plan_visit">
                  Visita <br><span class="btn-toggle-price">$100</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_week" name="plan" value="week">
                <label class="segmented-btn" for="plan_week">
                  Semana <br><span class="btn-toggle-price">$200</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_month" name="plan" value="month" checked>
                <label class="segmented-btn" for="plan_month">
                  Mes <br><span class="btn-toggle-price">$550</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_couple" name="plan" value="couple">
                <label class="segmented-btn" for="plan_couple">
                  Pareja <br><span class="btn-toggle-price">$950</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_semester" name="plan" value="semester">
                <label class="segmented-btn" for="plan_semester">
                  Semestre <br><span class="btn-toggle-price">$2300</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_promo_open" name="plan" value="promo_open">
                <label class="segmented-btn" for="plan_promo_open" style="border-color: var(--accent-color);">
                  Promo <br><span class="btn-toggle-price">$100</span>
                </label>
              </div>
            </div>

            <div style="margin-top: 10px;">
              <input class="segmented-input" type="radio" id="plan_custom" name="plan" value="custom">
              <label class="segmented-btn segmented-btn--custom" for="plan_custom" style="width: 100%; text-align: center;">Personalizado</label>

              <div id="custom_price_wrap" class="custom-price-wrap">
                <div class="grid-2 gap">
                  <div>
                    <label class="label">Monto (MXN)</label>
                    <input type="number" step="0.01" min="0.01"
                           name="custom_price_mxn"
                           class="form-input form-input--xl"
                           placeholder="Ej. 180.00">
                  </div>
                  <div>
                    <label class="label">Descripción</label>
                    <input type="text"
                           name="custom_description"
                           class="form-input form-input--xl"
                           placeholder="Ej. Ajuste especial">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3" style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #eee;">
            <label class="label label-strong">Nueva Fecha de Vencimiento</label>
            <div class="grid-2 gap">
              <div>
                <input type="date" 
                       name="custom_next_payment_date" 
                       id="custom_next_payment_date"
                       value="<%= @suggested_next_payment&.strftime('%Y-%m-%d') %>" 
                       class="form-input form-input--xl"
                       required>
              </div>
              <div style="display:flex; align-items:center;">
                <p class="text-muted" style="font-size: 0.9rem; line-height: 1.3;">
                  Calculada automáticamente desde su fecha de corte anterior (o hoy).
                </p>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label class="label label-strong">Método de pago</label>
            <div class="segmented segmented--2" role="radiogroup" aria-label="Método de pago">
              <input class="segmented-input" type="radio" id="pay_cash"     name="payment_method" value="cash" checked>
              <label class="segmented-btn" for="pay_cash">Efectivo</label>

              <input class="segmented-input" type="radio" id="pay_transfer" name="payment_method" value="transfer">
              <label class="segmented-btn" for="pay_transfer">Transferencia</label>
            </div>
          </div>

          <div class="actions-end">
            <%= f.submit "Cobrar y reactivar", class: "btn btn-primary btn-xl" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="card" style="margin-top:1rem;">
        <p class="text-muted">No se encontró ningún cliente con “<strong><%= @query %></strong>”.</p>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  document.addEventListener("turbo:load", function() {
    const planRadios = document.querySelectorAll('input[name="plan"]');
    const dateInput  = document.getElementById('custom_next_payment_date');
    
    // Obtenemos la fecha base del cliente (o hoy si ya venció)
    <% 
       base_calc = (@client && @client.next_payment_on && @client.next_payment_on > Date.current) ? @client.next_payment_on : Date.current 
    %>
    const baseDateStr = "<%= base_calc.strftime('%Y-%m-%d') %>"; 

    function addDays(dateStr, days) {
      let parts = dateStr.split('-'); 
      let d = new Date(parts[0], parts[1] - 1, parts[2]); 
      d.setDate(d.getDate() + days);
      return d.toISOString().split('T')[0];
    }

    function addMonths(dateStr, months) {
      let parts = dateStr.split('-');
      let d = new Date(parts[0], parts[1] - 1, parts[2]);
      d.setMonth(d.getMonth() + months);
      return d.toISOString().split('T')[0];
    }

    planRadios.forEach(radio => {
      radio.addEventListener('change', (e) => {
        const val = e.target.value;
        let newDate = baseDateStr; 

        if (val === 'visit' || val === 'promo_open') {
          // Asumiendo promo apertura es 1 mes. Si es visita es 1 día.
          if(val === 'visit') newDate = addDays(baseDateStr, 1);
          else newDate = addMonths(baseDateStr, 1);
        } else if (val === 'week') {
          newDate = addDays(baseDateStr, 7);
        } else if (val === 'month' || val === 'couple') {
          newDate = addMonths(baseDateStr, 1);
        } else if (val === 'semester') {
          newDate = addMonths(baseDateStr, 6);
        }
        
        if (dateInput) dateInput.value = newDate;
      });
    });
  });
</script>
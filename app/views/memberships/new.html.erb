<%= stylesheet_link_tag "main_panel", media: "all", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "membership", media: "all", "data-turbo-track": "reload" %>

<div class="membership-page">
  
  <div class="header-row" style="margin-bottom: 1.5rem; display:flex; justify-content:space-between; align-items:center;">
    <h2 class="title">Cobrar mensualidad</h2>
    <%= link_to "Inicio", authenticated_root_path, class: "btn" %>
  </div>

  <div class="card" style="margin-bottom: 1.5rem;">
    <%= form_with url: memberships_path, method: :get, local: true do |f| %>
      <div class="search-inline">
        <%= f.text_field :q, value: params[:q], placeholder: "Buscar # Cliente o nombre", class: "form-input form-input--xl", autofocus: true %>
        <%= f.submit "Buscar", class: "btn btn-accent btn-xl search-inline-btn" %>
      </div>
    <% end %>
  </div>

  <% if @query.present? %>
    <% if @client.present? %>
      
      <div class="card result-card" style="margin-bottom: 1.5rem;">
        <div class="result-row">
          <div class="result-photo">
            <%= client_photo_tag(@client, size: 120, classes: "client-photo--xl") %>
          </div>
          <div>
            <h3 class="result-name"><%= @client.name %></h3>
            <p class="result-meta">#<%= @client.id %> ‚Ä¢ <%= @client.membership_type&.humanize || "-" %></p>
            <div class="kv"><span>Inscripci√≥n</span><span><%= @client.enrolled_on || "-" %></span></div>
            <div class="kv"><span>Pr√≥ximo pago</span><span><%= @client.next_payment_on || "-" %></span></div>
          </div>
        </div>
      </div>

      <div class="card">
        <%= form_with url: memberships_checkout_path, method: :post, local: true, html: { id: "membership-form" } do |f| %>
          <%= hidden_field_tag :client_id, @client.id %>

          <div class="mb-3">
            <h3 class="card-title" style="margin-bottom: 15px;">1. Selecciona el Plan</h3>
            
            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; width: 100%; box-sizing: border-box;">
              
              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_visit" name="plan" value="visit" data-price="100" onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_visit" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Visita</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$100</span>
                </label>
              </div>

              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_week" name="plan" value="week" data-price="200" onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_week" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Semana</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$200</span>
                </label>
              </div>

              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_month" name="plan" value="month" data-price="550" checked onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_month" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Mes</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$550</span>
                </label>
              </div>

              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_couple" name="plan" value="couple" data-price="950" onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_couple" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Pareja</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$950</span>
                </label>
              </div>

              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_semester" name="plan" value="semester" data-price="2300" onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_semester" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Semestre</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$2300</span>
                </label>
              </div>

              <div style="position: relative; height: 100%;">
                <input class="segmented-input" type="radio" id="plan_promo_open" name="plan" value="promo_open" data-price="100" onchange="window.updateGymCalc()">
                <label class="btn-toggle" for="plan_promo_open" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100px; width: 100%; padding: 10px; margin: 0; box-sizing: border-box; border-color: #D4AF37;">
                  <span style="font-size: 1.1rem; margin-bottom: 5px;">Promo</span>
                  <span class="btn-toggle-price" style="font-size: 1.3rem; color: #fff;">$100</span>
                </label>
              </div>

            </div>
          </div>

          <div style="background: rgba(255,255,255,0.03); border-radius: 12px; padding: 2rem; margin: 2rem 0; border: 1px dashed rgba(255,255,255,0.1); text-align: center;">
             <div style="text-transform: uppercase; font-size: 0.85rem; color: #888; margin-bottom: 15px; letter-spacing: 2px;">Resumen de Pago</div>
             
             <div style="display: flex; justify-content: center; align-items: center; flex-wrap: wrap; gap: 40px;">
                <div>
                   <div style="font-size: 4.5rem; font-weight: 900; color: #fff; line-height: 1;">
                     $<span id="display-total">0</span>
                   </div>
                   <div id="display-plan-name" style="color: #D4AF37; font-weight: 800; margin-top: 10px; text-transform: uppercase; letter-spacing: 1px;"></div>
                </div>

                <div style="text-align: left;">
                   <label style="display: block; font-size: 0.9rem; color: #ccc; margin-bottom: 8px;">Nueva Fecha Vencimiento:</label>
                   <input type="date" 
                          name="custom_next_payment_date" 
                          id="custom_next_payment_date" 
                          class="form-input" 
                          style="font-size: 1.4rem; text-align: center; background: #000; border: 1px solid #444; color: #fff; padding: 10px; width: auto; border-radius: 8px;"
                          required>
                </div>
             </div>
          </div>

          <div class="mb-3">
             <h3 class="card-title">2. M√©todo de Pago</h3>
             <div class="segmented segmented--2" role="radiogroup">
               
               <div style="position: relative; width: 100%;">
                 <input class="segmented-input" type="radio" id="pay_cash" name="payment_method" value="cash" checked>
                 <label class="segmented-btn" for="pay_cash" style="width: 100%; justify-content: center;">
                    üíµ Efectivo
                 </label>
               </div>

               <div style="position: relative; width: 100%;">
                 <input class="segmented-input" type="radio" id="pay_card" name="payment_method" value="card">
                 <label class="segmented-btn" for="pay_card" style="width: 100%; justify-content: center;">
                    üí≥ Tarjeta
                 </label>
               </div>

             </div>
          </div>

          <div style="margin-top: 2.5rem;">
            <%= f.submit "‚úÖ Confirmar y Cobrar", class: "btn btn-xl btn-primary", style: "width: 100%; cursor: pointer; padding: 1.2rem; font-size: 1.3rem; font-weight: 800;" %>
          </div>

        <% end %>
      </div>
    <% else %>
      <div class="card" style="margin-top:1rem;">
        <p class="text-muted">No se encontr√≥ ning√∫n cliente con ‚Äú<strong><%= @query %></strong>‚Äù.</p>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  (function() {
    window.updateGymCalc = function() {
      const displayTotal = document.getElementById('display-total');
      const displayPlanName = document.getElementById('display-plan-name');
      const dateInput  = document.getElementById('custom_next_payment_date');
      const selectedRadio = document.querySelector('input[name="plan"]:checked');

      if (!selectedRadio || !dateInput) return;

      // 1. Actualizar Precio
      const price = selectedRadio.getAttribute('data-price');
      if(displayTotal) displayTotal.innerText = price;

      // 2. Actualizar Nombre
      const label = document.querySelector(`label[for="${selectedRadio.id}"]`);
      if(displayPlanName && label) {
        // Busca el span con la clase price para ignorarlo o toma el texto
        let text = label.innerText;
        // Limpiamos el precio del texto para que solo quede el nombre (ej: "Mes $550" -> "Mes")
        text = text.replace(/\$.*/g, '').trim(); 
        displayPlanName.innerText = text;
      }

      // 3. Calcular Fecha
      // Obtenemos fecha base desde Ruby
      <% if @client %>
        <% base_val = (@client.next_payment_on && @client.next_payment_on > Date.current) ? @client.next_payment_on : Date.current %>
        const baseDateStr = "<%= base_val.strftime('%Y-%m-%d') %>";
      <% else %>
        const baseDateStr = "<%= Date.current.strftime('%Y-%m-%d') %>";
      <% end %>

      let parts = baseDateStr.split('-');
      let targetDate = new Date(parts[0], parts[1] - 1, parts[2]);
      const planValue = selectedRadio.value;

      if (planValue === 'visit') {
        targetDate.setDate(targetDate.getDate() + 1);
      } else if (planValue === 'week') {
        targetDate.setDate(targetDate.getDate() + 7);
      } else if (planValue === 'semester') {
        targetDate.setMonth(targetDate.getMonth() + 6);
      } else {
        targetDate.setMonth(targetDate.getMonth() + 1);
      }

      const year = targetDate.getFullYear();
      const month = String(targetDate.getMonth() + 1).padStart(2, '0');
      const day = String(targetDate.getDate()).padStart(2, '0');
      
      dateInput.value = `${year}-${month}-${day}`;
      
      // Efecto visual
      dateInput.style.borderColor = "#D4AF37";
      setTimeout(() => dateInput.style.borderColor = "#444", 300);
    };

    // Inicializar al cargar
    document.addEventListener("turbo:load", window.updateGymCalc);
    document.addEventListener("DOMContentLoaded", window.updateGymCalc);
    setTimeout(window.updateGymCalc, 200);
  })();
</script>
<%= stylesheet_link_tag "main_panel", media: "all", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "membership", media: "all", "data-turbo-track": "reload" %>

<div class="membership-page">
  
  <%# --- HEADER --- %>
  <div class="header-row" style="margin-bottom: .75rem; display:flex; justify-content:space-between; align-items:center;">
    <h2 class="title">Cobrar mensualidad</h2>
    <%= link_to "Inicio", authenticated_root_path, class: "btn" %>
  </div>

  <%# --- BUSCADOR --- %>
  <div class="card">
    <%= form_with url: memberships_path, method: :get, local: true do |f| %>
      <div class="search-inline">
        <%= f.text_field :q, value: params[:q], placeholder: "Buscar # Cliente o nombre", class: "form-input form-input--xl", autofocus: true %>
        <%= f.submit "Buscar", class: "btn btn-accent btn-xl search-inline-btn" %>
      </div>
    <% end %>
  </div>

  <% if @query.present? %>
    <% if @client.present? %>
      <% overdue = @client.next_payment_on.present? && @client.next_payment_on < Date.current %>
      <% active  = @client.next_payment_on.present? && @client.next_payment_on >= Date.current %>

      <%# --- CLIENTE ENCONTRADO --- %>
      <div class="card result-card" style="margin-top:1rem;">
        <div class="result-row">
          <div class="result-photo">
            <%= client_photo_tag(@client, size: 120, classes: "client-photo--xl") %>
          </div>
          <div>
            <h3 class="result-name"><%= @client.name %></h3>
            <p class="result-meta">#<%= @client.id %> ‚Ä¢ <%= @client.membership_type&.humanize || "-" %></p>
            <div class="kv"><span>Inscripci√≥n</span><span><%= @client.enrolled_on || "-" %></span></div>
            <div class="kv"><span>Pr√≥ximo pago</span><span><%= @client.next_payment_on || "-" %></span></div>
          </div>
        </div>

        <div class="status-wrap">
          <% if overdue %>
            <div class="status-panel status-panel--debt">
              <div class="status-kicker">Estado</div>
              <div class="status-big">ADEUDO</div>
              <p class="status-sub">Fecha de pago vencida.</p>
            </div>
          <% elsif active %>
            <div class="status-panel status-panel--ok">
              <div class="status-kicker">Estado</div>
              <div class="status-big">ACTIVO</div>
              <p class="status-sub">Membres√≠a vigente.</p>
            </div>
          <% else %>
            <div class="status-panel">
              <div class="status-kicker">Estado</div>
              <div class="status-big">SIN FECHAS</div>
              <p class="status-sub">Cliente nuevo o sin historial.</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# --- FORMULARIO DE COBRO --- %>
      <div class="card" style="margin-top:1rem;">
        <%= form_with url: memberships_checkout_path, method: :post, local: true, html: { id: "membership-form" } do |f| %>
          <%= hidden_field_tag :client_id, @client.id %>

          <div class="mb-3">
            <h3 class="card-title">1. Selecciona el Plan</h3>
            
            <div class="btn-toggle-group">
              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_visit" name="plan" value="visit" data-price="100">
                <label class="btn-toggle" for="plan_visit">
                  Visita <span class="btn-toggle-price">$100</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_week" name="plan" value="week" data-price="200">
                <label class="btn-toggle" for="plan_week">
                  Semana <span class="btn-toggle-price">$200</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_month" name="plan" value="month" data-price="550" checked>
                <label class="btn-toggle" for="plan_month">
                  Mes <span class="btn-toggle-price">$550</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_couple" name="plan" value="couple" data-price="950">
                <label class="btn-toggle" for="plan_couple">
                  Pareja <span class="btn-toggle-price">$950</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_semester" name="plan" value="semester" data-price="2300">
                <label class="btn-toggle" for="plan_semester">
                  Semestre <span class="btn-toggle-price">$2300</span>
                </label>
              </div>

              <div class="plan-option">
                <input class="segmented-input" type="radio" id="plan_promo_open" name="plan" value="promo_open" data-price="100">
                <label class="btn-toggle" for="plan_promo_open" style="border-color: #D4AF37;">
                  Promo <span class="btn-toggle-price">$100</span>
                </label>
              </div>
            </div>
          </div>

          <div class="card" style="background: rgba(255,255,255,0.02); margin: 1.5rem 0; text-align: center; border: 1px dashed rgba(255,255,255,0.2);">
            
            <div style="font-size: 0.9rem; color: #888; text-transform: uppercase; margin-bottom: 0.5rem; letter-spacing: 1px;">
              Resumen de Pago
            </div>
            
            <div class="grid-2" style="align-items: center; gap: 2rem;">
              <div>
                <div style="font-size: 3.5rem; font-weight: 800; color: #fff; line-height: 1;">
                  $<span id="display-total">0</span>
                </div>
                <div style="color: #D4AF37; font-weight: 700; margin-top: 5px;" id="display-plan-name">
                  PLAN SELECCIONADO
                </div>
              </div>

              <div style="text-align: left;">
                <label class="block text-muted" style="margin-bottom: 5px;">Nueva Fecha de Vencimiento:</label>
                <input type="date" 
                       name="custom_next_payment_date" 
                       id="custom_next_payment_date"
                       class="form-input form-input--xl"
                       style="text-align: center; font-weight: bold;"
                       required>
              </div>
            </div>
          </div>

          <div class="mb-3">
             <h3 class="card-title">2. M√©todo de Pago</h3>
             <div class="segmented segmented--2" role="radiogroup">
               
               <input class="segmented-input" type="radio" id="pay_cash" name="payment_method" value="cash" checked>
               <label class="segmented-btn" for="pay_cash">
                 üíµ Efectivo
               </label>

               <input class="segmented-input" type="radio" id="pay_card" name="payment_method" value="card">
               <label class="segmented-btn" for="pay_card">
                 üí≥ Tarjeta
               </label>

             </div>
          </div>

          <div style="margin-top: 2rem;">
            <%= f.submit "‚úÖ Confirmar y Cobrar", class: "btn btn-xl block", style: "width: 100%; cursor: pointer;" %>
          </div>

        <% end %>
      </div>
    <% else %>
      <div class="card" style="margin-top:1rem;">
        <p class="text-muted">No se encontr√≥ ning√∫n cliente con ‚Äú<strong><%= @query %></strong>‚Äù.</p>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  document.addEventListener("turbo:load", function() {
    const planRadios = document.querySelectorAll('input[name="plan"]');
    const dateInput  = document.getElementById('custom_next_payment_date');
    const displayTotal = document.getElementById('display-total');
    const displayPlanName = document.getElementById('display-plan-name');
    
    // Fecha base calculada en Ruby
    <% 
       base_calc = (@client && @client.next_payment_on && @client.next_payment_on > Date.current) ? @client.next_payment_on : Date.current 
    %>
    const baseDateStr = "<%= base_calc.strftime('%Y-%m-%d') %>"; 

    function formatDateLocal(dateObj) {
        const year = dateObj.getFullYear();
        const month = String(dateObj.getMonth() + 1).padStart(2, '0');
        const day = String(dateObj.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    function calculateExpiration(planValue) {
      let parts = baseDateStr.split('-');
      let targetDate = new Date(parts[0], parts[1] - 1, parts[2]);

      if (planValue === 'visit') {
        targetDate.setDate(targetDate.getDate() + 1);
      } else if (planValue === 'week') {
        targetDate.setDate(targetDate.getDate() + 7);
      } else if (planValue === 'month' || planValue === 'couple' || planValue === 'promo_open' || planValue === 'promo_feb') {
        targetDate.setMonth(targetDate.getMonth() + 1);
      } else if (planValue === 'semester') {
        targetDate.setMonth(targetDate.getMonth() + 6);
      }
      return formatDateLocal(targetDate);
    }

    function updateSummary() {
      const selected = document.querySelector('input[name="plan"]:checked');
      if (selected) {
        // 1. Calcular Fecha
        if (dateInput) {
            dateInput.value = calculateExpiration(selected.value);
            // Animaci√≥n sutil de borde para indicar cambio
            dateInput.style.borderColor = "#D4AF37";
            setTimeout(() => dateInput.style.borderColor = "", 300);
        }
        
        // 2. Actualizar Precio Visual
        const price = selected.getAttribute('data-price');
        if (displayTotal) displayTotal.innerText = price;

        // 3. Actualizar Nombre del Plan
        const label = document.querySelector(`label[for="${selected.id}"]`);
        if (displayPlanName && label) {
           // Obtenemos solo el texto del nombre (ignorando el precio dentro del span)
           const fullText = label.textContent || label.innerText;
           const priceText = label.querySelector('.btn-toggle-price')?.textContent || "";
           const cleanName = fullText.replace(priceText, "").trim();
           displayPlanName.innerText = cleanName;
        }
      }
    }

    // Listeners
    planRadios.forEach(radio => {
      radio.addEventListener('change', updateSummary);
    });

    // Ejecutar al cargar la p√°gina
    updateSummary();
  });
</script>